@page
@model RegisterModel
@{
    ViewData["Title"] = "Join the Study Revolution";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Downloaded Theme-->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .col-img-bg {
            background: url('../images/register.png') center no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body class="bg-light">
    <section>
    <div class="container px-5 py-4 mt-5">

        <div class="row">
            <!-- Form Section -->
            <div class="col-md-6 form-section">
                <div>
                    <h1>@ViewData["Title"]</h1>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                        class="needs-validation" novalidate>
                        <h2 class="text-center">Start Your Journey Today!</h2>
                        <p class="text-center">Unlock a personalized study experience and accelerate your learning.</p>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control border-0" autocomplete="username"
                                aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control border-0"
                                autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control border-0"
                                autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-secondary">Create
                            Account</button>
                    </form>
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-md-6 col-img-bg"></div>
        </div>
    </div>
    </section>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>
